<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">

                    <solid
                        android:color="@color/colorDialogButtonPressedWhite" />

                    <stroke
                        android:width="0.5dp"
                        android:color="@color/light_slate_gray" />

                    <corners
                        android:bottomLeftRadius="@dimen/_10sdp"
                        android:bottomRightRadius="@dimen/_10sdp"
                        android:topLeftRadius="@dimen/_10sdp"
                        android:topRightRadius="@dimen/_10sdp" />

                    <padding
                        android:bottom="0dp"
                        android:left="0dp"
                        android:right="0dp"
                        android:top="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">

                    <solid
                        android:color="@color/colorDialogButtonUnPressedWhite" />

                    <stroke
                        android:width="0.5dp"
                        android:color="@color/light_slate_gray" />

                    <corners
                        android:bottomLeftRadius="@dimen/_10sdp"
                        android:bottomRightRadius="@dimen/_10sdp"
                        android:topLeftRadius="@dimen/_10sdp"
                        android:topRightRadius="@dimen/_10sdp" />

                    <padding
                        android:bottom="0dp"
                        android:left="0dp"
                        android:right="0dp"
                        android:top="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>