<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Dynamic_Dialog_Default_Style" parent="@style/Theme.AppCompat.Dialog">
        <!--Window background color is transparent-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>

        <!--Whether floating on the interface-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>

        <!-- Whether the background is allowed to darken --> <!-- Whether the background is blurred -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/UpDownAnimation</item>

        <!--Is there a title-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>

        <!--Is it semi-transparent?-->
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="Custom_Dialog_Style_Light" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Window background color is transparent-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>

        <!--Whether floating on the interface-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>

        <!-- Whether the background is allowed to darken --> <!-- Whether the background is blurred-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

        <!--Is there a title-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>

        <!--Is it semi-transparent?-->
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!--对话框样式-->
    <style name="DialogTheme" parent="@style/Theme.AppCompat.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否浮在activity上-->
        <item name="android:windowIsFloating">true</item>
        <!--半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--透明背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--对话框背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MyTheme" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogFullScreen">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="FullScreenDialogToolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="FullWidth.Dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowAnimationStyle">@style/DialogAnimation</item>-->
    </style>

    <!-- ******************************** windowAnimationStyle ********************************* -->
    <style name="EnterLeftExitRightAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_from_left</item>
        <item name="android:windowExitAnimation">@anim/exit_from_right</item>
    </style>

    <style name="EnterTopExitBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_from_top</item>
        <item name="android:windowExitAnimation">@anim/exit_from_bottom</item>
    </style>

    <style name="UpDownAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_dialog_out</item>
    </style>
</resources>